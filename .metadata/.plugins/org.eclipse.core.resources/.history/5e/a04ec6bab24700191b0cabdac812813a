package com.capgemini.studentexception.main;

import com.capgemini.studentexception.exception.InvalidInputException;

public class Factorial {
	private int number;

	public Factorial() {
		super();

	}

	public Factorial(int number) {
		super();
		this.number = number;
	}

	public int getFactorial(int number) throws InvalidInputException {
		int factorail = 1;
		if (number > 2) {
			for (int i = 1; i < number; i++) {
				factorail = number * i;
			}
			return factorail;
		} else
			throw new InvalidInputException("Number should be greater than 2");
	}

}