package com.capgemini.studentexception.main;

import com.capgemini.studentexception.exception.InvalidDayException;

public class Date {
	private int day;
	private int month;
	private int year;

	public Date() {
		super();

	}

	public Date(int day, int month, int year) throws InvalidDayException {
		super();
		if (day < 31)

			this.day = day;
		else
			throw new InvalidDayException("Day is not valid");

		this.month = month;
		this.year = year;
	}

}
